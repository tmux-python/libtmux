---
import '../styles.css'
import { splitDocstring } from '../utils'

const { value, html } = Astro.props
const blocks = splitDocstring(value ?? null)
---

{html ? (
  <div class="autodoc-doc" set:html={html} />
) : blocks.length > 0 ? (
  <div class="autodoc-doc">
    {blocks.map((block) => (
      <p>{block}</p>
    ))}
  </div>
) : null}
