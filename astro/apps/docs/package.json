{
  "name": "@libtmux/docs-site",
  "version": "0.0.1",
  "type": "module",
  "description": "Astro docs site for libtmux",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "biome lint .",
    "format": "pnpm biome check . --write; biome format . --write",
    "type-check": "astro check && tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "ncu": "ncu",
    "update": "pnpm update",
    "clean": "rm -rf dist/ node_modules/.cache/",
    "biome": "biome check . --write && biome format . --write"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/react": "^4.4.2",
    "@fontsource/fraunces": "^5.2.9",
    "@fontsource/ibm-plex-mono": "^5.2.7",
    "@fontsource/space-grotesk": "^5.2.10",
    "@libtmux/api-model": "workspace:*",
    "@libtmux/astro-autodoc": "workspace:*",
    "@libtmux/astro-intersphinx": "workspace:*",
    "@libtmux/intersphinx": "workspace:*",
    "@libtmux/py-parse": "workspace:*",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@astrojs/check": "^0.9.6",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
